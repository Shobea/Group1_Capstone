<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black_100"
    android:orientation="vertical"
    tools:context=".View.AboutResort">

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/resort_two"
                    android:contentDescription="press"
                    android:scaleType="fitXY" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/resort_two"
                    android:contentDescription="press"
                    android:scaleType="fitXY" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:background="@drawable/resort_two"
                    android:contentDescription="press" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="start">

        <Button
            android:id="@+id/button13"
            android:onClick="buttonFunction"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/back_arrow"
            app:backgroundTint="@null"
            android:contentDescription="press"  />

        <TextView
            android:id="@+id/heading"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway_extrabold"
            android:text="Resort name"
            android:textColor="@color/lightpurple"
            android:textSize="16pt" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="330dp">
        <ImageButton
            android:id="@+id/btnOutline"
            android:onClick="buttonFunction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_heart_outline"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="330dp">

        <ImageButton
            android:id="@+id/btnHeart"
            android:onClick="buttonFunction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pink_heart"
            app:backgroundTint="@null"
            android:visibility="invisible"/>
    </LinearLayout>

